<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.jokar.gankio">

	<uses-permission android:name="android.permission.INTERNET"/>
	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:name=".app.GankioApplication"
		android:theme="@style/AppTheme">
		<activity android:name=".view.activity.SplashViewActivity"
			android:theme="@style/SplahsTheme">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>

		<activity android:name=".view.activity.MainActivity"/>

		<meta-data android:name="org.jokar.gankio.app.GlideModuleSetting"
			android:value="GlideModule"/>
	</application>

</manifest>